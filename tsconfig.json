{
    "compilerOptions": {
      "target": "es2020",
      "lib": ["es2020", "DOM"],
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }